// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Necessary for Next auth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Skill {
  id        Int      @id @default(autoincrement())
  skillId   Int
  xp   BigInt
  level   Int
  rank   Int
  statRecord      StatRecord @relation(fields: [statRecordId], references: [id])
  statRecordId    Int
  createdAt DateTime @default(now())
}

model Minigame {
  id        Int      @id @default(autoincrement())
  minigameId   Int
  score   Int
  rank   Int
  statRecord      StatRecord @relation(fields: [statRecordId], references: [id])
  statRecordId    Int @default(0)
  createdAt DateTime @default(now())
}

model StatRecord {
  id        Int      @id @default(autoincrement())
  skills    Skill[]
  minigames    Minigame[]
  createdAt DateTime @default(now())
  player    Player @relation(fields: [playerId], references: [id])
  playerId  Int @default(0)
}

model Player {
  id    Int     @id @default(autoincrement())
  username  String @default("")
  displayName  String @default("")
  gameVersion String @default("RS3")
  accountType String @default("MAIN")
  created DateTime @default(now())
  lastChecked DateTime @default(now())
  recentStats  String @db.Text
  isTracking Boolean @default(false)
  statRecords StatRecord[]
}

model Activity {
  id            Int @id @default(autoincrement())
  username      String @default("")
  playerId      Int @default(0)
  occurred      String @default("")
  text          String @default("")
  details       String @default("")
  imageUrl      String @default("")
  price         Int @default(0)
  importance    Int @default(0)
  createdAt DateTime @default(now())
}
